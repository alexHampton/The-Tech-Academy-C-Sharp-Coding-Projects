            <div class="navbar-nav">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
                @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Students", "Index", "Student", new { area = "" }, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Courses", "Index", "Course", new { area = "" }, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Instructors", "Index", "Instructor", new { area = "" }, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Departments", "Index", "Department", new { area = "" }, new { @class = "nav-item nav-link" })

            </div>
        </div>
    </nav>


